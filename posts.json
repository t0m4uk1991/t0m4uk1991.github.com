---
layout: nill 
---
{
	"posts":
		[
			  {% for post in site.posts %}
					{
							{% assign date_day_month = post.date | date: "%d %b" %}
							{% assign date_year = post.date | date: "%Y" %}
							"title" : "{{ post.title }}",							
							"url" : "{{ post.url }}",							
							"date" : "{{date_day_month}}",
							"year" : "{{date_year}}",
							"keywords" : "{% for tag in post.tags %}{%unless forloop.first%} {% endunless%}{{tag | downcase }}{% endfor %}{% for category in post.categories %}{%unless forloop.last%} {% endunless%}{{category | downcase | replace: ' ', '_'}}{% endfor %}"
					}{% unless forloop.last %},{% endunless %}
			  {% endfor %}
		]
}
